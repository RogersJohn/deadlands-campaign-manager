# Production Environment Variables for Deadlands Campaign Manager
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to git - it contains secrets!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
DATABASE_URL=jdbc:postgresql://your-db-host:5432/deadlands
DATABASE_USERNAME=your-db-username
DATABASE_PASSWORD=your-secure-db-password

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate a new secret with: openssl rand -base64 64
# This is a 512-bit secret for production use
JWT_SECRET=REPLACE_WITH_YOUR_GENERATED_SECRET_FROM_OPENSSL

# JWT token expiration in milliseconds (86400000 = 24 hours)
JWT_EXPIRATION=86400000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins for CORS
# Include your frontend domain(s)
CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Server port (usually 8080 or set by hosting provider)
SERVER_PORT=8080

# Spring profile (production, staging, etc.)
SPRING_PROFILES_ACTIVE=production

# Logging level (ERROR, WARN, INFO, DEBUG)
LOG_LEVEL=INFO

# =============================================================================
# RATE LIMITING (if implemented)
# =============================================================================
# Maximum requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# Maximum login attempts per IP per hour
LOGIN_RATE_LIMIT_PER_HOUR=10

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Force HTTPS in production (true/false)
FORCE_HTTPS=true

# Session timeout in seconds (3600 = 1 hour)
SESSION_TIMEOUT=3600

# =============================================================================
# OPTIONAL: EMAIL CONFIGURATION (for password reset)
# =============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@your-domain.com
